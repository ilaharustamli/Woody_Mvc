@model UpdateTeamMemberVm
<form method="Post" enctype="multipart/form-data">
	<div class="form-group">
		<label asp-for="Name">Name</label>
		<input asp-for="Name" class="form-control" placeholder="Enter Name">
		<span asp-validation-for="Name" style="color:red"></span>
	</div>
	<div class="form-group">
		<label asp-for="positionId">Designation</label>
		<select class="form-control" asp-for="positionId" asp-items="@(new SelectList(ViewBag.Positions, "Id", "Name"))">
		</select>
		<span asp-validation-for="positionId" style="color:red"></span>
	</div>

	<div class="form-group">
		<label asp-for="File">File</label>
		<input asp-for="File" class="form-control">
		<span asp-validation-for="File" style="color:red"></span>
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>
