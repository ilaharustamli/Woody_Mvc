@model List<Position>
@{
	int count = 0;
}



<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Categories</h1>
	<p class="mb-4">
		You can manage designations here.
	</p>

	<!-- DataTales Example -->
	<div style="margin-left:300px" class="card shadow mb-4 d-flex  ">
		<div class="card-header py-3 d-flex justify-content-between align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">Designation table</h6>
			<a class="btn btn-primary" asp-action="Create">Add</a>
		</div>

		<div class="card-body">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Id</th>
							<th scope="col">Name</th>
							<th scope="col">Button</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							count++;
							<tr>
								<th>@count</th>
								<td>@item.Id</td>
								<td>@item.Name</td>

								<td>
									<a class="btn btn-secondary" asp-action="Update" asp-route-id=@item.Id>Update</a>
									<a class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id>Delete</a>

								</td>
							</tr>
						}

					</tbody>

				</table>
			</div>
		</div>
	</div>

</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->